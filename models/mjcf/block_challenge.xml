    <light castshadow="false" directional='true' diffuse='.3 .3 .3' specular='0.3 0.3 0.3' pos='0 1 2.5' dir='0 -1 -1'/>
    <geom name='floor' type='plane' size='0 0 0.01'/>

    <site name="manipulator_locate" pos="0.12 0.80 0.75" euler="0 0 3.15159"/>

